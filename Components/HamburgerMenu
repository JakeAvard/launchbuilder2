import React, { useState } from 'react';
import { Link } from 'react-router-dom';
import { createPageUrl } from '@/utils';
import { User } from '@/entities/User';
import { Button } from '@/components/ui/button';
import {
  Sheet,
  SheetContent,
  SheetHeader,
  SheetTitle,
  SheetTrigger,
} from '@/components/ui/sheet';
import {
  Collapsible,
  CollapsibleContent,
  CollapsibleTrigger,
} from '@/components/ui/collapsible';
import {
  Menu,
  Home,
  Heart,
  BarChart3,
  Bell,
  BookOpen,
  HelpCircle,
  LogOut,
  ChevronDown,
  Building2,
  Target,
  Coins
} from 'lucide-react';

export default function HamburgerMenu() {
  const [open, setOpen] = useState(false);
  const [myGivingOpen, setMyGivingOpen] = useState(false);

  const handleLogout = async () => {
    await User.logout();
  };

  return (
    <Sheet open={open} onOpenChange={setOpen}>
      <SheetTrigger asChild>
        <Button variant="ghost" size="icon" className="text-white hover:bg-white/20">
          <Menu className="w-6 h-6" />
        </Button>
      </SheetTrigger>
      <SheetContent side="left" className="w-80">
        <SheetHeader className="mb-6">
          <SheetTitle className="flex items-center gap-3">
            <img 
              src="https://qtrypzzcjebvfcihiynt.supabase.co/storage/v1/object/public/base44-prod/public/68e430aa590b552b5767d289/9e4369ba6_2.jpg"
              alt="Tithr"
              className="h-10 object-contain"
            />
          </SheetTitle>
        </SheetHeader>
        
        <nav className="space-y-2">
          <Link to={createPageUrl('Dashboard')} onClick={() => setOpen(false)}>
            <Button variant="ghost" className="w-full justify-start text-left hover:bg-gray-100">
              <Home className="w-5 h-5 mr-3" />
              Home
            </Button>
          </Link>

          <Collapsible open={myGivingOpen} onOpenChange={setMyGivingOpen}>
            <CollapsibleTrigger asChild>
              <Button variant="ghost" className="w-full justify-start text-left hover:bg-gray-100">
                <Heart className="w-5 h-5 mr-3" />
                My Giving
                <ChevronDown className={`w-4 h-4 ml-auto transition-transform ${myGivingOpen ? 'rotate-180' : ''}`} />
              </Button>
            </CollapsibleTrigger>
            <CollapsibleContent className="ml-8 mt-1 space-y-1">
              <Link to={createPageUrl('Organizations')} onClick={() => setOpen(false)}>
                <Button variant="ghost" size="sm" className="w-full justify-start text-left hover:bg-gray-100">
                  <Building2 className="w-4 h-4 mr-2" />
                  My Organizations
                </Button>
              </Link>
              <Link to={createPageUrl('Campaigns')} onClick={() => setOpen(false)}>
                <Button variant="ghost" size="sm" className="w-full justify-start text-left hover:bg-gray-100">
                  <Target className="w-4 h-4 mr-2" />
                  My Campaigns
                </Button>
              </Link>
              <Link to={createPageUrl('RoundUpSettings')} onClick={() => setOpen(false)}>
                <Button variant="ghost" size="sm" className="w-full justify-start text-left hover:bg-gray-100">
                  <Coins className="w-4 h-4 mr-2" />
                  Round-Up Giving
                </Button>
              </Link>
            </CollapsibleContent>
          </Collapsible>

          <Link to={createPageUrl('Impact')} onClick={() => setOpen(false)}>
            <Button variant="ghost" className="w-full justify-start text-left hover:bg-gray-100">
              <BarChart3 className="w-5 h-5 mr-3" />
              Impact Reports
            </Button>
          </Link>

          <Link to={createPageUrl('Alerts')} onClick={() => setOpen(false)}>
            <Button variant="ghost" className="w-full justify-start text-left hover:bg-gray-100">
              <Bell className="w-5 h-5 mr-3" />
              Alerts
            </Button>
          </Link>

          <Link to={createPageUrl('Resources')} onClick={() => setOpen(false)}>
            <Button variant="ghost" className="w-full justify-start text-left hover:bg-gray-100">
              <BookOpen className="w-5 h-5 mr-3" />
              Resources
            </Button>
          </Link>

          <Link to={createPageUrl('Support')} onClick={() => setOpen(false)}>
            <Button variant="ghost" className="w-full justify-start text-left hover:bg-gray-100">
              <HelpCircle className="w-5 h-5 mr-3" />
              Support
            </Button>
          </Link>
          
          <div className="pt-4 border-t">
            <Button
              variant="ghost"
              className="w-full justify-start text-left text-red-600 hover:bg-red-50 hover:text-red-700"
              onClick={handleLogout}
            >
              <LogOut className="w-5 h-5 mr-3" />
              Sign Out
            </Button>
          </div>
        </nav>
      </SheetContent>
    </Sheet>
  );
}
